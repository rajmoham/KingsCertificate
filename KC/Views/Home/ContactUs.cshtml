@model KC.Models.ViewModels.Home.ContactUsVM

@{
    ViewData["Title"] = "Contact Us";
}

<div class="mt-5">
    <h1>Contact JR<sup>2</sup></h1>
    <hr />
    <p class="text-body fs-4">We're always here to help. You can contact us either by phone or email:</p>
    <p class="text-body fs-5"><i class="fa fa-phone"></i>&nbsp;&nbsp;&nbsp;&nbsp;0800 1234 567</p>
    <p class="text-body fs-5"><i class="fa fa-envelope"></i>&nbsp;&nbsp;&nbsp;info@@jr2.azurewebsites.net</p>
    <hr />
    <p class="text-body fs-4">Alternatively, you can send us a message through this form and a member of the team will get back to you within 24 hours.</p>
    @if (!Model.ShowConfirmation)
    {
        <form>
            <div class="p-3">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="Name" hidden />
                <div class="input-group mb-3">
                    <span class="input-group-text" style="width:135px;">Your name</span>
                    <input type="text"
                           class="form-control"
                           placeholder="e.g. Fred Bloggs"
                           asp-for="Name">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" style="width:135px;">Email address</span>
                    <input type="text" class="form-control" placeholder="e.g. fred.bloggs@@example.com"
                           asp-for="EmailAddress">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" style="width:135px;">Order number</span>
                    <input type="text" class="form-control" placeholder="e.g. 10361457"
                           asp-for="OrderNumber">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" style="width:135px;">Message</span>
                    <textarea class="form-control"
                              placeholder="e.g. Hi, my delivery has not arrived on time and I would like compensation."
                              asp-for="Message"></textarea>
                </div>

                <button type="submit" formmethod="post" class="btn btn-success">Send message</button>
            </div>

        </form>
    }
    else
    {
        <p class="text-success fs-5">Thank you for your message. Look out for an email from us!</p>
    }
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}