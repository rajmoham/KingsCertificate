@model KC.Models.ViewModels.Home.IndexVM

@{
    ViewData["Title"] = "Home";
}

<div class="d-none d-lg-block">
    <div id="myCarousel" class="carousel slide pt-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <!--<svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777" /></svg>-->
                <img src="~/images/carousel1L.jpeg" style="width:100%;height:100%;filter:brightness(65%);" />
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>Can't get to the shops? <b>Free delivery's got you covered.</b></h1>
                        <p>Fresh food delivered straight to your doorstep.</p>
                        <p>
                            <a class="btn btn-lg btn-light"
                               data-toggle="tooltip"
                               title="You're trying to book a delivery slot, except we haven't yet coded that functionality. Essentially, this is a dummy button.">
                                Book a delivery slot
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel2L.jpeg" style="width:100%;height:100%;filter:brightness(65%);" />
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Up to your standard.</h1>
                        <p>We pride ourselves in complete customer satisfaction - anything less and you'll get a refund.</p>
                        <p><a class="btn btn-lg btn-light" asp-action="TermsAndConditions">Learn more</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel3L.png" style="width:100%;height:100%;filter:brightness(65%);" />
                <div class="container">
                    <div class="carousel-caption text-end">
                        <h1>Like variety?</h1>
                        <p>With <b>over 3000 products</b> to choose from, lack of variety is never a problem.</p>
                        <!--<p><a class="btn btn-lg btn-primary" href="#">Browse gallery</a></p>-->
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev first-carousel-left" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next first-carousel-right" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

