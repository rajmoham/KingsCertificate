@model KC.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="danger">
    <audio controls autoplay style="display:none;">
        <source src="~/Audio/Roblox Death Sound - Sound Effect (HD).mp3" type="audio/mp3"/>
    </audio>

    <img src="https://wallpaperaccess.com/full/2304669.jpg" height="525" width="800" />

    <section class="danger-txt">
        <h1 class="text-danger mt-5">Error.</h1>
        <h2 class="text-danger">Sorry! An error occurred while processing your request.</h2>
    </section>
</section>


@if (Model.ShowRequestId)
{
<p>
    <strong>Request ID:</strong> <code>@Model.RequestId</code>
</p>
}

