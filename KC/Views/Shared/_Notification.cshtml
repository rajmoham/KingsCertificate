@if (TempData[KC.Constants.NotificationKeys.SuccessKey] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData[KC.Constants.NotificationKeys.SuccessKey]','Success');
    </script>
}
@if (TempData[KC.Constants.NotificationKeys.ErrorKey] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData[KC.Constants.NotificationKeys.ErrorKey]');
    </script>
}